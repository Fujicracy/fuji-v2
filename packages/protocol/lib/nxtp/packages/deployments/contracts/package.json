    "@openzeppelin/contracts": "4.5.0",
    "@openzeppelin/contracts-upgradeable": "4.5.2",
    "@sinclair/typebox": "0.24.12",
    "@tenderly/hardhat-tenderly": "1.1.4",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "16.11.43",
    "chai": "4.3.6",
    "ethereum-waffle": "3.4.4",
    "ethers": "5.6.9",
