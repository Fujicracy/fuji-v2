{
  "name": "@x-fuji/sdk",
  "version": "0.1.0",
  "author": "Fujidao Labs OÃœ",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "module": "dist/sdk.esm.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "generate-types": "yarn workspace @x-fuji/protocol hardhat export-abi && typechain --target=ethers-v5 --out-dir src/types/contracts '../protocol/abis/**/*.json'",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/constants": "^5.7.0",
    "@ethersproject/contracts": "^5.4.0",
    "@ethersproject/providers": "^5.6.8",
    "@ethersproject/units": "^5.7.0",
    "ethers": "^5.6.9",
    "tiny-invariant": "^1.2.0",
    "tiny-warning": "^1.0.3"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.0.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/node": "^18.7.18",
    "dotenv": "^16.0.2",
    "husky": "^8.0.1",
    "size-limit": "^8.0.1",
    "ts-node": "^10.9.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
